{
  "compilerOptions": {
    // Diretórios
    "rootDir": "./",

    // Ambiente
    "module": "CommonJS",
    "target": "ES2020",
    "lib": ["ES2020"],
    "types": ["node"],

    // Permitir import * as readlineSync from "readline-sync"
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    // Mapas e tipagem
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Verificações mais rígidas
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Outras boas práticas
    "skipLibCheck": true
  },

  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
